<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER" style="-fx-background-color: white;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.coinue.controller.PaymentReminderDialogController">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <GridPane hgap="10" vgap="10">
        <Label text="平台名称：" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="platformField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="金额：" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="amountField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="类型：" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <ComboBox fx:id="typeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="到期日期：" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <DatePicker fx:id="dueDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="保存" onAction="#handleSave"/>
        <Button text="取消" onAction="#handleCancel"/>
    </HBox>
</VBox>