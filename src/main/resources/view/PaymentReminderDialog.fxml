<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.coinue.controller.PaymentReminderDialogController"
      spacing="10"
      prefWidth="500"
      prefHeight="450"
      style="-fx-background-color: linear-gradient(to right, #ffffff,rgb(192, 213, 255) 75%, #ffffff);">

    <!-- Top Navigation -->
    <HBox alignment="CENTER" spacing="0" style="-fx-background-color: #B0E0FF;" VBox.vgrow="NEVER">
        <Button text="⏰ Payment Reminder" style="-fx-background-color: transparent; -fx-min-width: 100%; -fx-font-weight: bold;" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- Main Content -->
    <VBox spacing="20.0" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="20.0" left="20.0" right="20.0" bottom="20.0"/>
        </padding>

        <!-- 主内容区域 -->
        <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-padding: 20px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            
            <GridPane hgap="15" vgap="15">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <Label text="平台名称：" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                <TextField fx:id="platformField" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="输入平台名称"
                          style="-fx-background-color: #F5F5F5; -fx-border-color: #E0E0E0; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 8px;"/>

                <Label text="金额：" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                <TextField fx:id="amountField" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="输入金额"
                          style="-fx-background-color: #F5F5F5; -fx-border-color: #E0E0E0; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 8px;"/>

                <Label text="类型：" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                <ComboBox fx:id="typeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="选择类型" maxWidth="Infinity"
                         style="-fx-background-color: #F5F5F5; -fx-border-color: #E0E0E0; -fx-border-radius: 5px; -fx-background-radius: 5px; -fx-padding: 8px;"/>

                <Label text="到期日期：" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                <DatePicker fx:id="dueDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" 
                           style="-fx-background-color: #F5F5F5; -fx-border-color: #E0E0E0; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
            </GridPane>
        </VBox>

        <!-- 底部按钮区域 -->
        <HBox spacing="15.0" alignment="CENTER" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-padding: 15px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <Button text="💾 保存" onAction="#handleSave"
                   style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5px; -fx-padding: 10px 20px; -fx-font-size: 14px;"
                   prefWidth="120.0"/>
            <Button text="❌ 取消" onAction="#handleCancel"
                   style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-background-radius: 5px; -fx-padding: 10px 20px; -fx-font-size: 14px;"
                   prefWidth="120.0"/>
        </HBox>
    </VBox>
</VBox>