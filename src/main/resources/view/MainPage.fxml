<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f0f5ff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.coinue.controller.MainPageController" stylesheets="@../styles/main.css">
    <children>
        <!-- 顶部导航栏 -->
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" prefHeight="60.0">
            <padding>
                <Insets left="20.0" right="20.0"/>
            </padding>
            <children>
                <Label text="Coinue" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
                <HBox spacing="20.0" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Button fx:id="homeButton" text="主页" styleClass="nav-button" onAction="#handleHomeNav"/>
                    <Button fx:id="analysisButton" text="分析" styleClass="nav-button" onAction="#handleAnalysisNav"/>
                    <Button fx:id="userButton" text="用户" styleClass="nav-button" onAction="#handleUserNav"/>
                </HBox>
            </children>
        </HBox>

        <!-- 主要内容区域 -->
        <VBox spacing="20.0" AnchorPane.topAnchor="80.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <!-- 功能按钮区域 -->
            <HBox spacing="20.0">
                <Button text="手动记录" onAction="#handleManualEntry" styleClass="action-button"/>
                <Button text="导入CSV" onAction="#handleImportCSV" styleClass="action-button"/>
            </HBox>

            <!-- 消费记录表格 -->
            <TableView fx:id="expenseTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="dateColumn" text="日期" prefWidth="100.0"/>
                    <TableColumn fx:id="nameColumn" text="消费名称" prefWidth="150.0"/>
                    <TableColumn fx:id="categoryColumn" text="类别" prefWidth="100.0"/>
                    <TableColumn fx:id="amountColumn" text="金额" prefWidth="100.0"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>