<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.coinue.controller.ExpenseRecordPageController"
      spacing="10"
      prefWidth="800"
      prefHeight="600"
      style="-fx-background-color: linear-gradient(to right, #ffffff,rgb(192, 213, 255) 75%, #ffffff);">

    <!-- Top Navigation -->
    <HBox alignment="CENTER" spacing="0" style="-fx-background-color: #B0E0FF;" VBox.vgrow="NEVER">
        <Button text="💼 Expense Records" style="-fx-background-color: transparent; -fx-min-width: 100%; -fx-font-weight: bold;" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- Main Content -->
    <VBox spacing="20.0" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="20.0" left="20.0" right="20.0" bottom="20.0"/>
        </padding>

        <!-- 操作按钮区域 -->
        <HBox spacing="15.0" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-padding: 15px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <Button onAction="#handleBackToHome" text="🏠 Back to Home"
                   style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 5px; -fx-padding: 10px 20px; -fx-font-size: 14px;"
                   prefWidth="150.0"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button onAction="#handleAddRecord" text="➕ Add Record"
                   style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5px; -fx-padding: 10px 20px; -fx-font-size: 14px;"
                   prefWidth="150.0"/>
        </HBox>

        <!-- 记录列表区域 -->
        <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-padding: 20px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);" VBox.vgrow="ALWAYS">
            <Label text="消费记录列表" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
            <ListView fx:id="expenseListView" VBox.vgrow="ALWAYS"
                     style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-radius: 5px; -fx-background-radius: 5px;"/>
        </VBox>
    </VBox>
</VBox>