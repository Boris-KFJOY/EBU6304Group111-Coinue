                    </VBox>
                    
                    <VBox spacing="5" style="-fx-background-color: #FFF3E0; -fx-background-radius: 8px; -fx-padding: 15px;" HBox.hgrow="ALWAYS">
                        <Label text="Encryption Level" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                        <Label text="AES-256" style="-fx-font-size: 12px; -fx-text-fill: #FF9800;"/>
                    </VBox>
                    
                    <VBox spacing="5" style="-fx-background-color: #E3F2FD; -fx-background-radius: 8px; -fx-padding: 15px;" HBox.hgrow="ALWAYS">
                        <Label text="Last Update" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
