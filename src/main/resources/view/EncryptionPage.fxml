                <Label text="Data Encryption Status" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
                
                <HBox spacing="20" alignment="CENTER_LEFT">
                    <VBox spacing="5" style="-fx-background-color: #E8F5E8; -fx-background-radius: 8px; -fx-padding: 15px;" HBox.hgrow="ALWAYS">
                        <Label text="Protected Files" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
