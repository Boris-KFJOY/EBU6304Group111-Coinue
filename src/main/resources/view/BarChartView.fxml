<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.coinue.controller.BarChartController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <BarChart fx:id="expenseBarChart" title="消费类别统计" legendVisible="true">
        <xAxis>
            <CategoryAxis label="消费类别" />
        </xAxis>
        <yAxis>
            <NumberAxis label="金额 (元)" />
        </yAxis>
    </BarChart>
    
    <HBox alignment="CENTER" spacing="10.0">
        <Button fx:id="exportPdfButton" text="导出PDF" onAction="#handleExportPdf" styleClass="primary-button" />
    </HBox>
</VBox>