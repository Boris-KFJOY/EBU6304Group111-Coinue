<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.coinue.controller.ManualEntryDialogController">

    <children>
        <VBox spacing="20.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <children>
                <!-- 标题 -->
                <Label text="记录消费" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>

                <!-- 表单区域 -->
                <GridPane vgap="15.0" hgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="100.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0"/>
                    </columnConstraints>

                    <!-- 消费名称 -->
                    <Label text="消费名称：" GridPane.rowIndex="0"/>
                    <TextField fx:id="nameField" promptText="请输入消费名称" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <!-- 消费金额 -->
                    <Label text="金额：" GridPane.rowIndex="1"/>
                    <TextField fx:id="amountField" promptText="请输入消费金额" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <!-- 消费类别 -->
                    <Label text="类别：" GridPane.rowIndex="2"/>
                    <ComboBox fx:id="categoryComboBox" prefWidth="150.0" promptText="选择消费类别" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <!-- 消费日期 -->
                    <Label text="日期：" GridPane.rowIndex="3"/>
                    <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                </GridPane>

                <!-- 按钮区域 -->
                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                    <Button text="取消" onAction="#handleCancel" styleClass="cancel-button"/>
                    <Button text="保存" onAction="#handleSave" styleClass="action-button" defaultButton="true"/>
                </HBox>
            </children>
        </VBox>
    </children>

    <stylesheets>
        <URL value="@../styles/main.css"/>
    </stylesheets>
</AnchorPane>