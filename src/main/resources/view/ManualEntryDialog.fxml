<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #e6f0fa;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.coinue.controller.ManualEntryDialogController">
    <children>
        <VBox spacing="20.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <children>
                <!-- 标题栏 -->
                <HBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 5;">
                    <padding>
                        <Insets top="10" right="15" bottom="10" left="15" />
                    </padding>
                    <children>
                        <Button text="&lt;" style="-fx-background-color: transparent; -fx-font-size: 16px;" onAction="#handleCancel"/>
                        <Label text="Homepage" style="-fx-font-size: 16px; -fx-font-weight: bold;" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets left="10" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>

                <!-- 主内容区域 -->
                <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 5;">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15" />
                    </padding>
                    <children>
                        <!-- 类别选择 - 修改为包含Expenses和Income的选项 -->
                        <HBox spacing="10.0">
                            <RadioButton fx:id="expensesRadio" text="Expenses" selected="true">
                                <toggleGroup>
                                    <ToggleGroup fx:id="recordTypeGroup"/>
                                </toggleGroup>
                            </RadioButton>
                            <RadioButton fx:id="incomeRadio" text="Income" toggleGroup="$recordTypeGroup"/>
                        </HBox>
                        
                        <!-- 类别选择 -->
                        <ComboBox fx:id="categoryComboBox" promptText="选择类别" prefWidth="150.0" style="-fx-font-size: 14px;"/>
                        
                        <!-- 子类别列表 -->
                        <ListView fx:id="subCategoryListView" prefHeight="150.0" style="-fx-background-color: #f8f8f8; -fx-background-radius: 5;"/>
                        
                        <!-- 名称输入 -->
                        <TextField fx:id="nameField" promptText="Name" style="-fx-background-color: #f0f7ff; -fx-background-radius: 5;"/>
                        
                        <!-- 金额输入和币种选择 -->
                        <HBox spacing="10.0">
                            <TextField fx:id="amountField" promptText="Enter Amount" style="-fx-background-color: #f0f7ff; -fx-background-radius: 5;" HBox.hgrow="ALWAYS"/>
                            <ComboBox fx:id="currencyComboBox" prefWidth="100.0" promptText="CNY" style="-fx-background-color: #f0f7ff; -fx-background-radius: 5;"/>
                        </HBox>
                        
                        <!-- 备注输入 -->
                        <TextArea fx:id="noteField" promptText="Click to write notes" prefHeight="100.0" style="-fx-background-color: #f0f7ff; -fx-background-radius: 5;"/>
                        
                        <!-- 日期选择 -->
                        <DatePicker fx:id="datePicker" prefWidth="300.0" style="-fx-background-color: #f0f7ff;"/>
                        
                        <!-- 快速选项 - 保留UI位置但不实现功能 -->
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <Label text="Quick Entry" />
                            <Button fx:id="quickEntryButton" style="-fx-background-color: #3498db; -fx-background-radius: 10; -fx-min-width: 20; -fx-min-height: 20; -fx-max-width: 20; -fx-max-height: 20;" disable="true"/>
                        </HBox>
                        
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <Label text="Family Member Sharing" />
                            <Button fx:id="familySharingButton" style="-fx-background-color: #3498db; -fx-background-radius: 10; -fx-min-width: 20; -fx-min-height: 20; -fx-max-width: 20; -fx-max-height: 20;" disable="true"/>
                        </HBox>
                    </children>
                </VBox>
                
                <!-- 底部按钮区域 -->
                <HBox spacing="15.0" alignment="CENTER">
                    <Button text="Import (.csv)" style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-radius: 5; -fx-background-radius: 5;" prefWidth="120.0" onAction="#handleImport"/>
                    <Button fx:id="saveButton" text="Save" style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-radius: 5; -fx-background-radius: 5;" prefWidth="120.0" onAction="#handleSave"/>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>