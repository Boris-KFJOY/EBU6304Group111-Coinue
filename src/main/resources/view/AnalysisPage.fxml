<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.coinue.controller.AnalysisPageController"
      spacing="10"
      prefWidth="800"
      prefHeight="600"
      style="-fx-background-color: linear-gradient(to right, #ffffff,rgb(192, 213, 255) 75%, #ffffff);">

    <!-- Top Navigation -->
    <HBox alignment="CENTER" spacing="0" style="-fx-background-color: #B0E0FF;" VBox.vgrow="NEVER">
        <Button text="Homepage" style="-fx-background-color: transparent; -fx-min-width: 33.33%;" onAction="#handleHomeNav" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <Button text="Analysis" style="-fx-background-color: rgba(255,255,255,0.3); -fx-min-width: 33.33%; -fx-font-weight: bold;" onAction="#handleAnalysisNav" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <Button text="User" style="-fx-background-color: transparent; -fx-min-width: 33.33%;" onAction="#handleUserNav" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
    </HBox>

    <!-- Main Content -->
    <VBox spacing="20.0" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="20.0" left="20.0" right="20.0" bottom="20.0"/>
        </padding>
        
        <!-- 用户状态显示区域 -->
        <HBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-padding: 10px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);">
            <Label fx:id="userDataStatusLabel" text="Status: Not Logged In" style="-fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="clearDataButton" text="Clear Data" onAction="#handleClearData"
                   style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 5px; -fx-padding: 5px 15px;"/>
            <Button text="Refresh Data" onAction="#handleRefreshData"
                   style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-background-radius: 5px; -fx-padding: 5px 15px;"/>
        </HBox>

        <!-- 操作按钮区域 -->
        <HBox spacing="20.0" alignment="CENTER_LEFT">
            <Button text="Import Analysis File" onAction="#handleImportAnalysisFile" 
                   style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 5px; -fx-padding: 10px 20px;"/>
            <Button text="Export PDF" onAction="#handleExportPdf"
                   style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 5px; -fx-padding: 10px 20px;"/>
            <Button text="Bill Payment Analysis" onAction="#handleBillPaymentAnalysis"
                   style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 5px; -fx-padding: 10px 20px;"/>
            <Button text="Set Budget" onAction="#handleSetBudget"
                   style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-background-radius: 5px; -fx-padding: 10px 20px;"/>
            <Label fx:id="fileNameLabel" text="No file selected" />
        </HBox>

        <!-- 预算进度条区域 -->
        <VBox spacing="5.0" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-padding: 15px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <Label text="Budget Usage" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <ProgressBar fx:id="budgetProgressBar" progress="0.0" prefWidth="Infinity" style="-fx-pref-height: 20px;"/>
            <Label fx:id="budgetLabel" text="Current Expense: ¥0 / Budget: ¥0"/>
        </VBox>

        <!-- 统计卡片区域 -->
        <VBox spacing="5.0" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-padding: 15px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <Label text="Statistics Overview" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <HBox fx:id="statsCardsContainer" spacing="10.0" alignment="CENTER_LEFT"/>
        </VBox>

        <!-- 图表展示区域 -->
        <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <!-- 饼图 -->
            <StackPane HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                <padding>
                    <Insets top="10.0" left="10.0" right="10.0" bottom="10.0"/>
                </padding>
                <PieChart fx:id="expensePieChart" title="Expense Type Distribution" legendVisible="true" />
            </StackPane>
            
            <!-- 条形图 -->
            <StackPane HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                <padding>
                    <Insets top="10.0" left="10.0" right="10.0" bottom="10.0"/>
                </padding>
                <BarChart fx:id="expenseBarChart" title="Expense Category Statistics" legendVisible="true">
                    <xAxis>
                        <CategoryAxis label="Expense Category" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Amount (¥)" />
                    </yAxis>
                </BarChart>
            </StackPane>
        </HBox>

        <!-- 图表说明区域 -->
        <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10px; -fx-padding: 15px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
            <Label text="Statistics Description" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
            <Label fx:id="statisticsLabel" text="Please import data file to view statistics" wrapText="true" />
        </VBox>
    </VBox>
</VBox>