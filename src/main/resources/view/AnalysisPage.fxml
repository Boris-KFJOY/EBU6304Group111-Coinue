<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f0f5ff;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.coinue.controller.AnalysisPageController" stylesheets="@../styles/main.css">
    <children>
        <!-- 顶部导航栏 -->
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" prefHeight="60.0">
            <padding>
                <Insets left="20.0" right="20.0"/>
            </padding>
            <children>
                <Label text="Expense Analysis" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
                <HBox spacing="20.0" alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Button fx:id="homeButton" text="Home" styleClass="nav-button" onAction="#handleHomeNav"/>
                    <Button fx:id="analysisButton" text="Analysis" styleClass="nav-button" onAction="#handleAnalysisNav"/>
                    <Button fx:id="userButton" text="User" styleClass="nav-button" onAction="#handleUserNav"/>
                </HBox>
            </children>
        </HBox>

        <!-- 主要内容区域 -->
        <VBox spacing="20.0" AnchorPane.topAnchor="80.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
            <!-- 操作按钮区域 -->
            <HBox spacing="20.0" alignment="CENTER_LEFT">
                <Button text="Import Analysis File" onAction="#handleImportAnalysisFile" styleClass="action-button"/>
                <Button text="Export PDF" onAction="#handleExportPdf" styleClass="action-button"/>
                <Label fx:id="fileNameLabel" text="No file selected" />
            </HBox>

            <!-- 预算进度条区域 -->
            <VBox spacing="5.0" style="-fx-background-color: white; -fx-background-radius: 5px; -fx-padding: 10px;">
                <Label text="Budget Usage" style="-fx-font-weight: bold;"/>
                <ProgressBar fx:id="budgetProgressBar" progress="0.0" prefWidth="Infinity" style="-fx-pref-height: 20px;"/>
                <Label fx:id="budgetLabel" text="Current Expense: ¥0 / Budget: ¥0"/>
            </VBox>

            <!-- 图表展示区域 -->
            <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                <!-- 饼图 -->
                <StackPane HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 5px;">
                    <PieChart fx:id="expensePieChart" title="Expense Type Distribution" legendVisible="true" />
                </StackPane>
                
                <!-- 条形图 -->
                <StackPane HBox.hgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 5px;">
                    <BarChart fx:id="expenseBarChart" title="Expense Category Statistics" legendVisible="true">
                        <xAxis>
                            <CategoryAxis label="Expense Category" />
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Amount (¥)" />
                        </yAxis>
                    </BarChart>
                </StackPane>
            </HBox>

            <!-- 图表说明区域 -->
            <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 5px; -fx-padding: 15px;">
                <Label text="Statistics Description" style="-fx-font-weight: bold;">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label fx:id="statisticsLabel" text="Please import data file to view statistics" wrapText="true" />
            </VBox>
        </VBox>
    </children>
</AnchorPane>